{
  "name": "AI Context Vault",
  "description": "Injects saved memory into AI chats ðŸ§ . Bookmarks, context snippets, encrypted Gist sync. More tools coming soon ðŸš€",
  "version": "1.0.31",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "background"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://chatgpt.com/*",
    "https://*.google.com/*",
    "https://copilot.microsoft.com/*",
    "https://gemini.google.com/*",
    "https://poe.com/*",
    "https://huggingface.co/chat/*",
    "https://bard.google.com/*",
    "https://pi.ai/*",
    "https://perplexity.ai/*",
    "https://www.phind.com/*",
    "https://you.com/*",
    "https://ora.ai/*",
    "https://deepai.org/chat/*",
    "https://beta.character.ai/*",
    "https://chat.forefront.ai/*",
    "https://chat.lmsys.org/*",
    "https://chat.deepseek.com/*",
    "https://chat.mistral.ai/*",
    "https://chatgroove.com/*",
    "https://grok.x.ai/*",
    "https://labs.openai.com/*",
    "https://writesonic.com/chat/*",
    "https://ai.facebook.com/*",
    "https://chat.together.ai/*",
    "https://dust.tt/*"
  ],
  "action": {
    "default_title": "AI Context Vault",
    "default_icon": {
      "16": "icons/icon-grey-16.png",
      "48": "icons/icon-grey-48.png",
      "128": "icons/icon-grey-128.png"
    },
    "default_popup": "options.html"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://chatgpt.com/*",
        "https://*.google.com/*",
        "https://copilot.microsoft.com/*",
        "https://gemini.google.com/*",
        "https://poe.com/*",
        "https://huggingface.co/chat/*",
        "https://bard.google.com/*",
        "https://pi.ai/*",
        "https://perplexity.ai/*",
        "https://www.phind.com/*",
        "https://you.com/*",
        "https://ora.ai/*",
        "https://deepai.org/chat/*",
        "https://beta.character.ai/*",
        "https://chat.forefront.ai/*",
        "https://chat.lmsys.org/*",
        "https://chat.deepseek.com/*",
        "https://chat.mistral.ai/*",
        "https://chatgroove.com/*",
        "https://grok.x.ai/*",
        "https://labs.openai.com/*",
        "https://writesonic.com/chat/*",
        "https://ai.facebook.com/*",
        "https://chat.together.ai/*",
        "https://dust.tt/*"
      ],
      "js": ["inject.bundle.js"],
      "css": ["inject.css"]
    }
  ],
  "commands": {
    "save-selected-context": {
      "suggested_key": {
        "windows": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Save highlighted text to AI Context Vault"
    },
    "show-context-manager": {
      "suggested_key": {
        "windows": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Show/hide AI Context Vault manager overlay"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["topics.json", "topics/*", "questions.json", "questions/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-grey-16.png",
    "48": "icons/icon-grey-48.png",
    "128": "icons/icon-grey-128.png"
  }
}
