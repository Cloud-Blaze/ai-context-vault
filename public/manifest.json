{
  "name": "AI Context Vault",
  "description": "Injects saved memory into AI chats ðŸ§ . Bookmarks, context snippets, encrypted Gist sync. More tools coming soon ðŸš€",
  "version": "1.0.6",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://ai.facebook.com/*",
    "https://anthropic.com/*",
    "https://beta.character.ai/*",
    "https://bard.google.com/*",
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://chat.forefront.ai/*",
    "https://chat.lmsys.org/*",
    "https://chat.deepseek.com/*",
    "https://chat.mistral.ai/*",
    "https://chat.together.ai/*",
    "https://chatgroove.com/*",
    "https://claude.ai/*",
    "https://cohere.ai/*",
    "https://deepai.org/chat/*",
    "https://dust.tt/*",
    "https://gemini.google.com/*",
    "https://*.google.com/*",
    "https://grok.x.ai/*",
    "https://huggingface.co/chat/*",
    "https://inflection.ai/*",
    "https://jasper.ai/*",
    "https://labs.openai.com/*",
    "https://copilot.microsoft.com/*",
    "https://ora.ai/*",
    "https://pi.ai/*",
    "https://perplexity.ai/*",
    "https://www.phind.com/*",
    "https://poe.com/*",
    "https://replicate.com/*",
    "https://runwayml.com/*",
    "https://scale.ai/*",
    "https://you.com/*",
    "https://writesonic.com/chat/*"
  ],
  "action": {
    "default_title": "AI Context Vault",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://ai.facebook.com/*",
        "https://anthropic.com/*",
        "https://beta.character.ai/*",
        "https://bard.google.com/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://chat.forefront.ai/*",
        "https://chat.lmsys.org/*",
        "https://chat.deepseek.com/*",
        "https://chat.mistral.ai/*",
        "https://chat.together.ai/*",
        "https://chatgroove.com/*",
        "https://claude.ai/*",
        "https://cohere.ai/*",
        "https://deepai.org/chat/*",
        "https://dust.tt/*",
        "https://gemini.google.com/*",
        "https://*.google.com/*",
        "https://grok.x.ai/*",
        "https://huggingface.co/chat/*",
        "https://inflection.ai/*",
        "https://jasper.ai/*",
        "https://labs.openai.com/*",
        "https://copilot.microsoft.com/*",
        "https://ora.ai/*",
        "https://pi.ai/*",
        "https://perplexity.ai/*",
        "https://www.phind.com/*",
        "https://poe.com/*",
        "https://replicate.com/*",
        "https://runwayml.com/*",
        "https://scale.ai/*",
        "https://you.com/*",
        "https://writesonic.com/chat/*"
      ],
      "js": [
        "inject.bundle.js"
      ],
      "css": [
        "inject.css"
      ]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "save-selected-context": {
      "suggested_key": {
        "windows": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Save highlighted text to AI Context Vault"
    },
    "show-context-manager": {
      "suggested_key": {
        "windows": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Show/hide AI Context Vault manager overlay"
    }
  }
}