{
  "name": "AI Context Vault",
  "description": "Injects saved memory into AI chats ðŸ§ . Bookmarks, context snippets, encrypted Gist sync. More tools coming soon ðŸš€",
  "version": "1.0.6",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://*.ai.facebook.com/*",
    "https://*.bard.google.com/*",
    "https://*.character.ai/*",
    "https://*.chat.deepseek.com/*",
    "https://*.chat.forefront.ai/*",
    "https://*.chat.lmsys.org/*",
    "https://*.chat.mistral.ai/*",
    "https://*.chat.together.ai/*",
    "https://*.chatgroove.com/*",
    "https://*.claude.ai/*",
    "https://*.clova-x.naver.com/*",
    "https://*.cohere.ai/*",
    "https://*.copilot.microsoft.com/*",
    "https://*.deepai.org/chat/*",
    "https://*.dust.tt/*",
    "https://*.gemini.google.com/*",
    "https://*.grok.com/*",
    "https://*.grok.x.ai/*",
    "https://*.inflection.ai/*",
    "https://*.jasper.ai/*",
    "https://*.khanmigo.ai/*",
    "https://*.kimi.ai/*",
    "https://*.labs.openai.com/*",
    "https://*.meta.ai/*",
    "https://*.open-assistant.io/*",
    "https://*.ora.ai/*",
    "https://*.pi.ai/*",
    "https://*.replicate.com/*",
    "https://*.runwayml.com/*",
    "https://*.scale.ai/*",
    "https://*.woebothealth.com/*",
    "https://*.woebothealth.com/*",
    "https://*.bing.com/*",
    "https://*.ibm.com/products/watsonx-assistant/*",
    "https://*.intercom.com/fin/*",
    "https://*.phind.com/*",
    "https://*.salesforce.com/ai/*",
    "https://*.wysa.com/*",
    "https://*.yiyan.baidu.com/*"
  ],
  "action": {
    "default_title": "AI Context Vault",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/*",
        "https://*.ai.facebook.com/*",
        "https://*.bard.google.com/*",
        "https://*.character.ai/*",
        "https://*.chat.deepseek.com/*",
        "https://*.chat.forefront.ai/*",
        "https://*.chat.lmsys.org/*",
        "https://*.chat.mistral.ai/*",
        "https://*.chat.together.ai/*",
        "https://*.chatgroove.com/*",
        "https://*.claude.ai/*",
        "https://*.clova-x.naver.com/*",
        "https://*.cohere.ai/*",
        "https://*.copilot.microsoft.com/*",
        "https://*.deepai.org/chat/*",
        "https://*.dust.tt/*",
        "https://*.gemini.google.com/*",
        "https://*.grok.com/*",
        "https://*.grok.x.ai/*",
        "https://*.inflection.ai/*",
        "https://*.jasper.ai/*",
        "https://*.khanmigo.ai/*",
        "https://*.kimi.ai/*",
        "https://*.labs.openai.com/*",
        "https://*.meta.ai/*",
        "https://*.open-assistant.io/*",
        "https://*.ora.ai/*",
        "https://*.pi.ai/*",
        "https://*.replicate.com/*",
        "https://*.runwayml.com/*",
        "https://*.scale.ai/*",
        "https://*.woebothealth.com/*",
        "https://*.woebothealth.com/*",
        "https://*.bing.com/*",
        "https://*.ibm.com/products/watsonx-assistant/*",
        "https://*.intercom.com/fin/*",
        "https://*.phind.com/*",
        "https://*.salesforce.com/ai/*",
        "https://*.wysa.com/*",
        "https://*.yiyan.baidu.com/*"
      ],
      "js": [
        "inject.bundle.js"
      ],
      "css": [
        "inject.css"
      ]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "save-selected-context": {
      "suggested_key": {
        "windows": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Save highlighted text to AI Context Vault"
    },
    "show-context-manager": {
      "suggested_key": {
        "windows": "Ctrl+J",
        "mac": "Command+J"
      },
      "description": "Show/hide AI Context Vault manager overlay"
    }
  }
}